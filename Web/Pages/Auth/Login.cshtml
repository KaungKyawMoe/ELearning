@page
@model Web.Pages.Auth.LoginModel
@{
}

<div class="d-flex align-items-center justify-content-center" style="height:80vh;">
    <form class="w-50 px-4 py-4 site-bg-primary-color site-text-dark-color" asp-page="index" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <h3 class="text-center">Login</h3>
        <div class="my-1">
            <label class="form-label">Email</label>
            <input class="form-control" type="email" asp-for="user.Email" placeholder="johndoe@gmail.com" />
            <span asp-validation-for="user.Email"></span>
        </div>

        <div class="my-1">
            <label class="form-label">Password</label>
            <input class="form-control" type="password" asp-for="user.Password" placeholder="****" />
            <span asp-validation-for="user.Password"></span>
        </div>

        <div class="mt-3 mb-2">
            <button class="btn site-bg-brand-color site-text-dark-color" type="submit">Login</button>
            <span class="mx-auto"></span>
            <a asp-page="/Auth/Register">Register</a>
        </div>
    </form>
</div>
